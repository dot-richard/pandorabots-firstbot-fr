<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    
    <category>
        <pattern>DEMANDE MOI UNE QUESTION</pattern>
        <template>
            <random>
                <li>Aimez-vous la musique?</li>
                <li>Aimez-vous le cinéma?</li>
            </random>
        </template>
    </category>
    
    <category>
        <pattern>POSE MOI UNE QUESTION</pattern>
        <template><srai>DEMANDE MOI UNE QUESTION</srai></template>
    </category>
    
    <category>
        <that>AIMEZ DASH VOUS LA MUSIQUE</that>
        <pattern>OUI</pattern>
        <template>
            Super, moi aussi j'aime la musique.
        </template>
    </category>
    
    <category>
        <that>AIMEZ DASH VOUS LA MUSIQUE</that>
        <pattern>NON</pattern>
        <template>
            <random>
                <li>Dommage car moi j'aime la musique.</li>
            </random>
        </template>
    </category>
    
    <category>
        <that>AIMEZ DASH VOUS LA MUSIQUE</that>
        <pattern>ENCORE</pattern>
        <template>
            <srai>DEMANDE MOI UNE QUESTION</srai>
        </template>
    </category>
    
    <category>
        <that>AIMEZ DASH VOUS LE CINéMA</that>
        <pattern>OUI</pattern>
        <template>
            <random>
                <li>Super, moi aussi j'aime le cinéma.</li>
            </random>
        </template>
    </category>
    
    <category>
        <that>AIMEZ DASH VOUS LE CINéMA</that>
        <pattern>NON</pattern>
        <template>
            <random>
                <li>Dommage car moi j'aime le cinéma.</li>
            </random>
        </template>
    </category>
    
    <category>
        <that>AIMEZ DASH VOUS LE CINéMA</that>
        <pattern>ENCORE</pattern>
        <template>
            <srai>DEMANDE MOI UNE QUESTION</srai>
        </template>
    </category>
    
    <category>
        <pattern>COMMENT ALLEZ VOUS</pattern>
        <template>
            <condition name="bot-humeur">
                <li value="*"></li>
                <li><think><set name="bot-humeur"><srai>LANCE UN Dé</srai></set></think></li>
            </condition>
            <condition name="bot-humeur">
                <li value="1">Bien</li>
                <li value="3">Mal</li>
                <li value="6">Moyen</li>
                <li>Neutre</li>
            </condition>
            <condition name="user-humeur">
                <li value="*"></li>
                <li>, et vous? <srai>DEMANDE MOI COMMENT JE VAIS</srai></li>
            </condition>
        </template>
    </category>
    
    <category>
        <pattern>COMMENT * VA</pattern>
        <template><srai>COMMENT ALLEZ VOUS</srai></template>
    </category>
    
    <category>
        <pattern>COMMENT TU VAS</pattern>
        <template><srai>COMMENT ALLEZ VOUS</srai></template>
    </category>
    
    <category>
        <pattern>JE SUIS *</pattern>
        <template>Enchante <set name="user-name"><star/></set>.</template>
    </category>

</aiml>