    <category>
	    <pattern>_ S IL TE PLAIT</pattern>
	    <template>
	        <think><set name="temp"><srai><star/></srai></set></think>
	        <condition name="abus">
    	        <li value="*">
    	            <srai>PHRASE DE MOT D ABUS <get name="abus"></get></srai>
                    <think><set name="temp"></set></think>
                </li>
    	        <li>
                    <random>
        	            <li>Vous parlez poliment. <get name="temp"></get></li>
        	            <li>Vous êtes agréable. <get name="temp"></get></li>
        	        </random>   
    	        </li>
	        </condition>
        </template>
	</category>
	
