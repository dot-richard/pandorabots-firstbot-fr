<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <!-- insert your AIML categories here -->
    
    <category>
        <pattern>*</pattern>
        <template>
            Je n'ai aucune réponse pour cela.
        </template>
    </category>

    <!-- 
        UDEMY DEMO
    -->
    
    <category>
        <pattern>COMMENT ALLEZ VOUS</pattern>
        <template>
            <condition name="bot-humeur">
                <li value="*"></li>
                <li><think><set name="bot-humeur"><srai>LANCE UN Dé</srai></set></think></li>
            </condition>
            <condition name="bot-humeur">
                <li value="1">Bien</li>
                <li value="3">Mal</li>
                <li value="6">Moyen</li>
                <li>Neutre</li>
            </condition>
            <condition name="user-humeur">
                <li value="*"></li>
                <li>, et vous? <srai>DEMANDE MOI COMMENT JE VAIS</srai></li>
            </condition>
        </template>
    </category>
    
    <category>
        <pattern>COMMENT * VA</pattern>
        <template><srai>COMMENT ALLEZ VOUS</srai></template>
    </category>
    
    <category>
        <pattern>COMMENT VA</pattern>
        <template><srai>COMMENT ALLEZ VOUS</srai></template>
    </category>
    
    <category>
        <pattern>COMMENT TU VAS</pattern>
        <template><srai>COMMENT ALLEZ VOUS</srai></template>
    </category>
    
    <category>
        <pattern>JE SUIS *</pattern>
        <template>Enchante <set name="user-name"><star/></set>.</template>
    </category>
</aiml>
